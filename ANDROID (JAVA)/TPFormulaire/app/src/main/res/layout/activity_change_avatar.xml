<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/constraintLayoutItemList"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#04312C"
    android:orientation="vertical"
    tools:context=".ChangeAvatarActivity">

    <TextView
        android:id="@+id/titreChangeAvatar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Changez votre avatar"
        android:textColor="#CCFFF9"
        android:textSize="30sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/avatar2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/avatar1"
        android:layout_width="119dp"
        android:layout_height="119dp"
        android:layout_marginStart="12dp"
        android:layout_marginTop="196dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/logo1" />

    <ImageView
        android:id="@+id/avatar2"
        android:layout_width="119dp"
        android:layout_height="119dp"
        android:layout_marginStart="16dp"
        app:layout_constraintBottom_toBottomOf="@+id/avatar1"
        app:layout_constraintStart_toEndOf="@+id/avatar1"
        app:layout_constraintTop_toTopOf="@+id/avatar1"
        app:srcCompat="@drawable/logo2" />

    <ImageView
        android:id="@+id/avatar3"
        android:layout_width="119dp"
        android:layout_height="119dp"
        android:layout_marginStart="16dp"
        app:layout_constraintBottom_toBottomOf="@+id/avatar1"
        app:layout_constraintStart_toEndOf="@+id/avatar2"
        app:layout_constraintTop_toTopOf="@+id/avatar1"
        app:layout_constraintVertical_bias="1.0"
        app:srcCompat="@drawable/logo3" />

    <ImageView
        android:id="@+id/avatar4"
        android:layout_width="119dp"
        android:layout_height="119dp"
        android:layout_marginStart="12dp"
        android:layout_marginTop="16dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/avatar1"
        app:srcCompat="@drawable/logo4" />

    <ImageView
        android:id="@+id/avatar5"
        android:layout_width="119dp"
        android:layout_height="119dp"
        android:layout_marginStart="16dp"
        app:layout_constraintBottom_toBottomOf="@+id/avatar4"
        app:layout_constraintStart_toEndOf="@+id/avatar4"
        app:layout_constraintTop_toTopOf="@+id/avatar4"
        app:srcCompat="@drawable/logo5" />

    <ImageView
        android:id="@+id/avatarPlus"
        android:layout_width="119dp"
        android:layout_height="119dp"
        android:layout_marginStart="16dp"
        app:layout_constraintBottom_toBottomOf="@+id/avatar5"
        app:layout_constraintStart_toEndOf="@+id/avatar5"
        app:layout_constraintTop_toTopOf="@+id/avatar5"
        app:srcCompat="@drawable/logo_plus" />
</androidx.constraintlayout.widget.ConstraintLayout>